<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.buaa.ops.Dao.AccountDao">
    <insert id="addAccount" parameterType="Account" useGeneratedKeys="true" keyProperty="accountId">
        insert into Account values (#{email}, #{password}, #{realName})
    </insert>
    <delete id="deleteAccount" parameterType="Integer">
        delete from Account where account_id = #{accountId}
    </delete>
    <select id="selectAccountByEmail" parameterType="String" resultType="Account">
        select * from Account where email = #{email}
    </select>
    <delete id="deleteAccountBuffer" parameterType="Integer">
        delete from AccountBuffer where account_buffer_id = #{accountBufferId}
    </delete>
    <insert id="addAccountBuffer" parameterType="AccountBuffer" useGeneratedKeys="true" keyProperty="accountBufferId">
        insert into AccountBuffer values (#{email}, #{password})
    </insert>
    <select id="selectAccountBuffer" parameterType="Integer" resultType="AccountBuffer">
        select * from AccountBuffer where account_buffer_id = #{accountBufferId}
    </select>
</mapper>